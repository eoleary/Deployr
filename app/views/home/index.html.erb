<div class="grid_24">
  Dashboard
</div>
<section class="grid_12">
  <header>Servers</header>
  <article>
    <table>
      <thead>
        <tr>
          <th>Hostname</th>
          <th>Staging Sites</th>
          <th>Production Sites</th>
        </tr>
      </thead>
      <tbody>
        <% Server.all(:limit => 5).each do |server| -%>
          <tr>
            <td><%=h link_to server.hostname, server %></td>
            <td><%=h server.staging_sites.length %></td>
            <td><%=h server.production_sites.length %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
    <a href="/servers">More</a>
  </article>
</section>
<section class="grid_12">
  <header>Sites</header>
  <article>
    <table>
      <thead>
        <tr>
          <th>Domain</th>
        </tr>
      </thead>
      <tbody>
        <% Site.all(:limit => 5).each do |site| -%>
          <tr>
            <td><%=h link_to site.domain, site %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
    <a href="/sites">More</a>
  </article>
</section>
<div class="clear"></div>
<section class="grid_12">
  <header>Pushes</header>
  <article>
    <table>
      <thead>
        <tr>
          <th>Domain</th>
          <th>Ref</th>
          <th>Timestamp</th>
        </tr>
      </thead>
      <tbody>
        <% GhPush.all(:limit => 5).each do |push| -%>
          <tr>
            <td><%=h push.repository.site.domain %></td>
            <td><%=h push.short_ref %></td>
            <td><%=h push.created_at.strftime("%a %b %d, %Y %I:%M %p") %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
    <a href="/">More</a>
  </article>
</section>
<section class="grid_12">
  <header>Jobs</header>
  <article>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Attempts</th>
        </tr>
      </thead>
      <tbody>
        <% Delayed::Backend::ActiveRecord::Job.all(:limit => 5).each do |job| -%>
          <tr>
            <td><%=h job.id %></td>
            <td><%=h job.attempts %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
    <a href="/">More</a>
  </article>
</section>
