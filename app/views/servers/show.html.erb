<p id="notice"><%= notice %></p>

<p>
  <b>Hostname:</b>
  <%= @server.hostname %>
</p>

<p>
  <b>Username:</b>
  <%= @server.username %>
</p>

<p>
  <b>Password:</b>
  <%= "*" * @server.password.length %>
</p>

<p>
  <b>Type:</b>
  <%= @server.class.select_name %>
</p>

<p>
  <b>Port:</b>
  <%= @server.port %>
</p>

<p>
  <b>Default path:</b>
  <%= @server.default_path %>
</p>

<p>
  <b>Staging Sites:</b>
  <ul>
    <% if @server.staging_sites.length == 0 -%>
      <li>No sites here!</li>
    <% end -%>
    <% @server.staging_sites.each do |site| -%>
      <li><%= link_to "dev.#{site.domain}", site %></li>
    <% end -%>
  </ul>
  <%= link_to "Add a Site", :controller => "sites", :action => :new %>
</p>

<p>
  <b>Production Sites:</b>
  <ul>
    <% if @server.production_sites.length == 0 -%>
      <li>No sites here!</li>
    <% end -%>
    <% @server.production_sites.each do |site| -%>
      <li><%= link_to "www.#{site.domain}", site %></li>
    <% end -%>
  </ul>
  <%= link_to "Add a Site", :controller => "sites", :action => :new %>
</p>

<%= link_to 'Edit', edit_server_path(@server) %> |
<%= link_to 'Back', servers_path %>
