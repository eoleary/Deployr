<%= form_for(@site) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :domain %><br />
    <%= f.text_field :domain, :placeholder => "example.com" %>
  </div>
  <div class="field">
    <%= f.label :gh_url, "Github URL" %><br />
    <%= f.text_field :gh_url, :placeholder => "http://wwww.github.com/teamcolab/deployr" %>
  </div>
  <div class="field">
    <%= f.label :staging_server_id %><br />
    <%= f.collection_select :staging_server_id, Server.all, :id, :hostname, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :production_server_id %><br />
    <%= f.collection_select :production_server_id, Server.all, :id, :hostname, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :staging_path %><br />
    <%= f.text_field :staging_path, :placeholder => "/dev" %>
  </div>
  <div class="field">
    <%= f.label :production_path %><br />
    <%= f.text_field :production_path, :placeholder => "/www" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
